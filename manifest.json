{
  "manifest_version": 2,
  "name": "ChatGPT Mods",
  "version": "1.0",
  "description": "Implements JavaScript and CSS modifications for chatgpt.com.",
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://chatgpt.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}

{
  "manifest_version": 2,
  "name": "ChatGPT Mods",
  "version": "1.0",
  "description": "Implements JavaScript and CSS modifications for chatgpt.com.",
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://chatgpt.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "applications": {
    "gecko": {
      "id": "your-addon-id@domain.com",
      "strict_min_version": "42.0"
    }
  }
}
